<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>

      <a href="/contact/add" class="btn btn-primary mb-2"
        >Tambah Data Contact</a
      >

      <!-- lakukan pengecekan pada message untuk melakukan flash message -->
      <% if (message.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= message %></div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No Hp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <!-- jika arraynya tidak ada isinya atau panjangnya kosong, maka kita akan beri alert. -->
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data contact masih kosong.
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact,index)=> { index++ %>
          <tr>
            <th scope="row"><%= index++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-circle"></i> detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
